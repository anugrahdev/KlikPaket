<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            type="com.anugrahdev.app.ikurir.data.models.waybill.WaybillData"
            name="waybill">
        </variable>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2.8dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Shipment"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppinsmed"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="24-01-2019 | "
                            android:text="@{waybill.waybill.waybillDate+` | `}"
                            android:fontFamily="@font/poppinsbold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="09.30 AM"
                            android:text="@{waybill.waybill.waybillTime}"
                            android:fontFamily="@font/poppinsbold"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/tv_delivery_status"
                        android:padding="4.5dp"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@{waybill.delivery_status.status}"
                        android:fontFamily="@font/poppinsbold"
                        android:background="@{waybill.delivery_status.status.equals(`DELIVERED`) ? @drawable/bg_green_rounded : @drawable/btn_rounded }"                                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="On Process" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="AWB Number"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmed"/>
            <TextView
                android:id="@+id/tv_waybill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@{waybill.waybillNumber}"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="From"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppinsmed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Anang Nugraha"
                        android:text="@{waybill.waybill.shipperName ?? `-`}"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Ilir Barat I, Palembang, Sumatera selatan"
                        android:text="@{waybill.waybill.shippingCity }"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="To"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppinsmed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Opang"
                        android:text="@{waybill.waybill.receiverName!=null ? waybill.waybill.receiverName : `-`}"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Kota Bekasi"
                        android:text="@{waybill.waybill.receiverCity}"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Service"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmed"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="JNE Express"
                android:text="@{waybill.courier.name}"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>